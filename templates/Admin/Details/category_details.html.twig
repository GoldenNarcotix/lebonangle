{% extends 'base.html.twig' %}

{% block title %}Details: {{ category.name }}{% endblock %}

{% block body %}
    <div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="my-4">{% trans %}Category{% endtrans %}</h2>
            <div style="box-shadow: 2px 3px 9px 4px rgba(0,0,0,0.04);">
                <div class="q-container-show p-4">
                    <div class="row">
                        <div class="col-2 text-center">
                            <img src="{{ asset('images/tisha.png') }}" width="100" height="100">
                        </div>
                        <div class="col">
                            <h1 class="q-title-show">{% trans %}Category Name{% endtrans%} : {{ category.name }}</h1>
                            <div class="q-display p-3">
                                <i class="fa fa-quote-left mr-3"></i>
                                <p class="d-inline"></p>
                                <p class="pt-4"><strong></strong></p>
                                <p class="pt-4">
                                    <strong>
                                    </strong></p>
                                <p class="pt-4">
                                    <strong>

                                    </strong></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-between my-4">
        <a href="{{ path('app_edit_category', {id: category.id}) }}" class="btn btn-sm btn-secondary">{% trans %}Edit Category{% endtrans %}</a>
        <a href="{{ path('app_delete_category', {id: category.id}) }}" class="btn btn-sm btn-danger">{% trans %}Delete Category{% endtrans %}</a>
    </div>
{% endblock %}